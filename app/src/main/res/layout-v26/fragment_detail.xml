<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.DetailsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/breed_name"
        style="@style/TextAppearance.MaterialComponents.Headline2"
        android:textAlignment="center"
        android:tooltipText="Hello"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/breed_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/breed_name" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/breed_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/firstRating"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:id="@+id/first_rating"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/second_rating"/>
        <com.google.android.material.slider.Slider
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/first_slider"
            app:layout_constraintTop_toBottomOf="@id/first_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/second_rating"
            android:enabled="false"
            android:valueFrom="0.0"
            android:valueTo="5.0"
            android:stepSize="0.0"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/secondRating"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:id="@+id/second_rating"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/first_rating"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/second_slider"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:stepSize="0.0"
            android:valueFrom="0.0"
            android:valueTo="5.0"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/second_rating"
            app:layout_constraintTop_toBottomOf="@id/first_rating" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/thirdRating"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:id="@+id/third_rating"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/first_slider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fourth_rating"/>
        <com.google.android.material.slider.Slider
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/third_slider"
            app:layout_constraintTop_toBottomOf="@id/third_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/second_rating"
            android:enabled="false"
            android:valueFrom="0.0"
            android:valueTo="5.0"
            android:stepSize="0.0"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fourthRating"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:id="@+id/fourth_rating"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/first_slider"
            app:layout_constraintStart_toStartOf="@id/second_rating"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.slider.Slider
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/fourth_slider"
            app:layout_constraintTop_toBottomOf="@id/fourth_rating"
            app:layout_constraintStart_toStartOf="@id/second_rating"
            app:layout_constraintEnd_toEndOf="parent"
            android:enabled="false"
            android:valueFrom="0.0"
            android:valueTo="5.0"
            android:stepSize="0.0"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fifthRating"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:id="@+id/fifth_rating"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/third_slider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sixth_rating"/>
        <com.google.android.material.slider.Slider
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/fifth_slider"
            app:layout_constraintTop_toBottomOf="@id/fifth_rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/second_rating"
            android:enabled="false"
            android:valueFrom="0.0"
            android:valueTo="5.0"
            android:stepSize="0.0"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sixthRating"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:id="@+id/sixth_rating"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/fourth_slider"
            app:layout_constraintStart_toStartOf="@id/second_rating"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/sixth_slider"
            android:textSize="20dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/sixth_rating"
            app:layout_constraintStart_toStartOf="@id/second_rating"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/web_nav"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Find Out More By Following The Link Below"
            android:textSize="18sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/web_nav"
            android:autoLink="web"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="15sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>